<div class="row">
	<div class="col-md-4">
		<%= image_tag @reviwer.avatar.url(:medium), class: "img-circle" %>
		<hr>
		<div class="bor">
			<% if @work_genres %>
				<% @work_genres.each do |wg| %>
					<h4><strong><%= wg.title %></strong></h4>
					<h5><%= wg.description %></h5>
					<h5>Цена за символ: <%= wg.price_per_symbol %> ₽</h5>
					<h5><%= link_to "Отправить работу" %></h5>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="col-md-6">
		<h3><%= @reviwer.name %></h3>
		<h6><strong>Рейтинг: <%= @reviwer.rating %> (10)</strong></h6><hr>
		<% if @reviwer.biography %>
			<h5 class="bg-success"><%= @reviwer.biography.slogan %></h5>
			<hr align="center">
			<h5><%= @reviwer.biography.work_experiance %></h5><hr>
			<h5><strong>Библиография:</strong></h5>
			<h5><%= @reviwer.biography.bibliography %></h5> 
		<% end %>
	</div>
</div>