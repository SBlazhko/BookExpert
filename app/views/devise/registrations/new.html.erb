<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', :default => "Sign up") %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label "Имя" %>
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Сергей Брин" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "brin@gmail.com" %>
      </div>
      <div class="form-group">
        <%= f.label "Пароль" %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "Минимум 6 знаков" %>
      </div>
      <div class="form-group">
        <%= f.label "Повторите пароль" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
